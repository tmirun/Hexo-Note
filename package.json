{
  "name": "hexo-note",
  "version": "0.4.0",
  "productName": "hexo-note",
  "description": "Hexo Note is a desktop client for Hexo.js",
  "homepage": "",
  "author": {
    "name": "Tmirun",
    "email": "tmirun@hotmail.com"
  },
  "keywords": [
    "hexo",
    "hexo note",
    "hexonote",
    "hexo client",
    "hexoclient",
    "hexojs",
    "angular",
    "angular 6",
    "electron",
    "typescript",
    "sass"
  ],
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "npm run postinstall:electron && npx electron-builder install-app-deps",
    "postinstall:web": "node postinstall-web",
    "postinstall:electron": "node postinstall",
    "ng": "ng",
    "start": "npm run postinstall:electron && npm-run-all -p ng:serve electron:serve",
    "build": "npm run postinstall:electron && npm run electron:serve-tsc && ng build",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "ng:serve": "ng serve",
    "ng:serve:web": "npm run postinstall:web && ng serve -o",
    "electron:serve-tsc": "tsc -p tsconfig-serve.json",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:serve-tsc && electron . --serve",
    "electron:local": "npm run build:prod && electron .",
    "electron:linux": "npm run build:prod && npx electron-builder build --linux",
    "electron:windows": "npm run build:prod && npx electron-builder build --windows",
    "electron:mac": "npm run build:prod && npx electron-builder build --mac",
    "electron:all": "npm run build:prod && npx electron-builder build -wml",
    "publish:linux": "npm run build:prod && npx electron-builder build -l -p'onTagOrDraft'",
    "publish:windows": "npm run build:prod && npx electron-builder build -w -p 'onTagOrDraft'",
    "publish:mac": "npm run build:prod && npx electron-builder build -m -p 'onTagOrDraft'",
    "publish:all": "npm run build:prod && npx electron-builder build -wml -p 'onTagOrDraft'",
    "test": "npm run postinstall:web && ng test",
    "e2e": "npm run postinstall:web && ng e2e"
  },
  "dependencies": {
    "electron-is-dev": "^1.0.1",
    "electron-log": "^2.2.17",
    "electron-reload": "1.2.2",
    "electron-settings": "^3.2.0",
    "electron-updater": "^4.0.6",
    "fix-path": "^2.1.0",
    "fs-extra": "^7.0.0",
    "hexo": "^3.7.1",
    "jquery": "^3.3.1",
    "tslib": "^1.9.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.12.0",
    "@angular/animations": "^7.2.0",
    "@angular/cli": "7.2.1",
    "@angular/common": "7.2.0",
    "@angular/compiler": "7.2.0",
    "@angular/compiler-cli": "7.2.0",
    "@angular/core": "7.2.0",
    "@angular/flex-layout": "^7.0.0-beta.23",
    "@angular/forms": "7.2.0",
    "@angular/http": "7.2.0",
    "@angular/language-service": "7.2.0",
    "@angular/platform-browser": "7.2.0",
    "@angular/platform-browser-dynamic": "7.2.0",
    "@angular/router": "7.2.0",
    "@ctrl/ngx-codemirror": "^1.3.8",
    "@fortawesome/fontawesome-free": "^5.3.1",
    "@ngx-translate/core": "10.0.2",
    "@ngx-translate/http-loader": "3.0.1",
    "@types/jasmine": "2.8.8",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "8.9.4",
    "@types/promise.prototype.finally": "^2.0.2",
    "chokidar": "^2.0.4",
    "codelyzer": "4.2.1",
    "codemirror": "^5.40.2",
    "core-js": "2.5.6",
    "electron": "9.1.0",
    "electron-builder": "^20.38.4",
    "jasmine-core": "3.1.0",
    "jasmine-spec-reporter": "4.2.1",
    "js-yaml": "^3.12.0",
    "karma": "2.0.2",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-reporter": "2.0.1",
    "karma-jasmine": "1.1.2",
    "karma-jasmine-html-reporter": "1.1.0",
    "less": "^2.7.3",
    "moment": "^2.22.2",
    "ng-zorro-antd": "^7.0.0-rc.3",
    "ngx-markdown": "^6.2.0",
    "npm-run-all": "4.1.3",
    "npx": "10.2.0",
    "promise.prototype.finally": "^3.1.0",
    "protractor": "5.3.2",
    "rxjs": "6.3.3",
    "rxjs-compat": "^6.3.2",
    "ts-node": "6.0.3",
    "tslint": "5.10.0",
    "typescript": "3.2.2",
    "uuid": "^3.3.2",
    "wait-on": "2.1.0",
    "webdriver-manager": "12.0.6",
    "zone.js": "0.8.27"
  }
}
